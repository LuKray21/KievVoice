#:kivy 1.8.0

<ProfileMainWidget>:
    canvas.before:
        Color:
            rgba: 0.61,0.89,0.59,1
        Rectangle:
            pos: self.pos
            size: self.size
    orientation: 'vertical'
    spacing: 1

    AppActionBar:
        size_hint: (1., 0.1)
    
    BoxLayout:
        orientation: 'vertical'
        size_hint: (1,1)
        BoxLayout:
            orientation:'vertical'
            size_hint: (1, 1)
            padding: [15, 0, 15,15]
            BoxLayout:
                orientation: 'horizontal'
                size_hint: (1,1)
                Label:
                    id: login
                    text: 'Логін: LuKray21'
                    size_hint: (1, 1)
                    halign: 'center'
                    color: 0,0,0,1
                    font_size: '20sp'
            Widget:
                id: separator4
                size_hint_y: None
                height: 6
                canvas:
                    Color:
                        rgba: 1,1,1,1
                    Rectangle:
                        pos: 20, separator4.center_y
                        size: separator4.width, 2
            BoxLayout:
                orientation: 'vertical'
                size_hint: (1,1)
                Label:
                    color: 0,0,0,1
                    font_size: '20sp'
                    text: "Оновлення даних"
            BoxLayout:
                orientation: 'horizontal'
                size_hint: (1,1)
                Label: 
                    color: 0,0,0,1
                    size_hint: (.4, .6)
                    text: "Ім'я"
                TextInput:
                    size_hint: (1, .6)
                    id: name
                    font_size: '25sp'
            BoxLayout:
                orientation: 'horizontal'
                size_hint: (1,1)
                Label: 
                    color: 0,0,0,1
                    size_hint: (.4, .6)
                    text: 'Прізвище'
                TextInput:
                    size_hint: (1, .6)
                    font_size: '25sp'
                    id: surname
            BoxLayout:
                orientation: 'horizontal'
                size_hint: (1,1)
                Label: 
                    color: 0,0,0,1
                    size_hint: (.4, .6)
                    text: 'Email'
                TextInput:
                    size_hint: (1, .6)
                    id: email
                    font_size: '25sp'
            BoxLayout:
                orientation: 'horizontal'
                size_hint: (1,1)
                Label: 
                    color: 0,0,0,1
                    size_hint: (.4, .6)
                    text: 'Мобільний'
                TextInput:
                    size_hint: (1, .6)
                    id: phone
                    font_size: '25sp'
            BoxLayout:
                orientation: 'horizontal'
                size_hint: (1,1)
                Label: 
                    color: 0,0,0,1
                    size_hint: (.4, .6)
                    text: 'Район'
                ProfileRegionDropDown:
                    id: region
                    size_hint: (1, .6)
                    font_size: '25sp'
            BoxLayout:
                size_hint: (1, .2)
            BoxLayout:
                orientation: 'vertical'
                size_hint: (1,.6)
                Button:
                    text: 'Оновити данні'
                    on_release: app.profileWorker.updateProfile(name, surname, email, app.profileWorker.getProfileRegion(), phone)
                    background_normal: ''
                    background_color: 0.24,0.60,0.27,1
            BoxLayout:
                size_hint: (1, .2)
            Widget:
                id: separator5
                size_hint_y: None
                height: 6
                canvas:
                    Color:
                        rgba: 1,1,1,1
                    Rectangle:
                        pos: 20, separator5.center_y
                        size: separator5.width, 2
            BoxLayout:
                orientation: 'vertical'
                size_hint: (1,1)
                Label:
                    color: 0,0,0,1
                    font_size: '20sp'
                    text: "Зміна пароля"
            BoxLayout:
                orientation: 'horizontal'
                size_hint: (1,1)
                Label: 
                    size_hint: (.4, .6)
                    color: 0,0,0,1
                    text: 'Старий пароль'
                TextInput:
                    id: oldPassword
                    size_hint: (1, .6)
                    font_size: '25sp'
                    password: 'True'
            BoxLayout:
                orientation: 'horizontal'
                size_hint: (1,1)
                Label: 
                    size_hint: (.4, .6)
                    color: 0,0,0,1
                    text: 'Новий пароль'
                TextInput:
                    id: newPassword
                    size_hint: (1, .6)
                    font_size: '25sp'
                    password: 'True'
            BoxLayout:
                size_hint: (1, .2)
            BoxLayout:
                orientation: 'vertical'
                size_hint: (1,.6)
                Button:
                    text: 'Змінити пароль'
                    on_release: app.profileWorker.updatePassword(oldPassword, newPassword)
                    background_normal: ''
                    background_color: 0.24,0.60,0.27,1                    

<ProfileRegionDropDown>:
    Button:
        id: btn
        text: 'Шевченківський'
        on_release: dropdown.open(self)
        size_hint_y: None
        height: '40dp'
        background_normal: ''
        background_color: 0.24,0.60,0.27,1
    DropDown:
        id: dropdown
        # on_parent: self.dismiss()
        on_select: btn.text = '{}'.format(args[1])
        Button:
            text: 'Голосiївський'
            size_hint_y: None
            height: '40dp'
            on_release: dropdown.select('Голосiївський')
            on_release: app.profileWorker.setProfileRegion('Голосiївський')
            background_normal: ''
            background_color: 0.24,0.60,0.27,1
