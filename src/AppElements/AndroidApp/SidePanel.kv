#:kivy 1.8.0

<SidePanel>:
    canvas.before:
        Color:
            rgba: 1,1,1,1
        Rectangle:
            pos: self.pos
            size: self.size
    orientation: 'vertical'
    spacing: 1
    BoxLayout:
        canvas.before:
            Color:
                rgba: 0.39,0.60,0.78,1
            Rectangle:
                pos: self.pos
                size: self.size
        orientation: 'vertical'
        Label:
            text: "Рогальський Михайло"
            color: 1,1,1,1
            text_size: self.width, None
            height: self.texture_size[1]
            size: self.size
            halign: 'center'
            size_hint: 1, 0.2

    MenuItem:
        text: 'Профіль'
        size_himt: 1, 1

    MenuItem:
        text: 'Новини'
        size_hint: 1, 1

    MenuItem:
        text: 'Події'
        size_hint: 1, 1

    MenuItem:
        text: 'Створити подію'
        size_hint: 1, 1
    
    MenuItem:
        text: "Зворотній зв'язок"
        size_hint: 1, 1

    MenuItem:
        text: 'Вихід'
        size_hint: 1, 0.5


