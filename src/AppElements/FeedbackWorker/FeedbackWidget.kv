#:kivy 1.8.0

<FeedbackWidget>:
    canvas.before:
        Color:
            rgba: 0.61,0.89,0.59,1
        Rectangle:
            pos: self.pos
            size: self.size
    orientation: 'vertical'
    spacing: 1

    AppActionBar:
        size_hint: (1., 0.1)
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'vertical'
            padding: [20, 3, 20, 10]
            size_hint: (1,1)
            BoxLayout:
                orientation: 'vertical'
                size_hint: (1,.4)
                Label:
                    text: "Тема"
                    font_size: '20sp'
                    size_hint: (1, .4)
                    halign: 'center'
                TextInput:
                    size_hint: (1, .4)
                    font_size: '20sp'
                    id: feedbackTitle
                    multiline: 'False'
            BoxLayout:
                orientation: 'vertical'
                size_hint: (1,.4)
                Label:
                    text: "Email для відповіді"
                    halign: 'center'
                    size_hint: (1, .4)
                    font_size: '20sp'
                TextInput:
                    id: feedbackEmail
                    font_size: '20sp'
                    size_hint: (1, .4)
            BoxLayout:
                orientation: 'vertical'
                size_hint: (1,1)
                Label:
                    text: "Звернення"
                    halign: 'center'
                    size_hint: (1, .2)
                    font_size: '20sp'
                TextInput:
                    id: feedbackText
                    font_size: '20sp'
                    size_hint: (1, .5)
        BoxLayout:
            orientation: 'horizontal'
            size_hint: (1,.2)
            padding: [1, 10, 1, 2]
            Button:
                text:'Далі'
                on_press:
                background_normal: ''
                background_color: 0.24,0.60,0.27,1
                on_release: app.feedbackWorker.createNewFeedback(feedbackTitle.text, feedbackEmail.text, feedbackText.text)
                size_hint: (1, 1)
            